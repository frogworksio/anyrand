{
  "name": "anyrand",
  "version": "1.0.0",
  "description": "Permissionless verifiable randomness on any EVM",
  "scripts": {
    "gwei": "yarn hardhat run scripts/gwei.ts",
    "request": "yarn hardhat run scripts/request.ts",
    "deploy:scrollSepolia": "yarn hardhat --config hardhat.config.scrollSepolia.ts --network scrollSepolia run scripts/deployAnyrandScrollSepolia.ts",
    "deploy:scroll": "yarn hardhat --config hardhat.config.scroll.ts --network scroll run scripts/deployAnyrandScroll.ts",
    "deploy:base": "yarn hardhat --config hardhat.config.base.ts --network base run scripts/deployAnyrandBase.ts",
    "deploy:local": "yarn hardhat --network localhost run scripts/deployAnyrandLocal.ts",
    "format:check": "yarn prettier --check .",
    "format": "yarn prettier --write .",
    "build": "yarn hardhat compile",
    "test": "yarn hardhat --network hardhat test",
    "coverage": "yarn hardhat --network hardhat coverage",
    "postinstall": "yarn patch-package"
  },
  "keywords": ["solidity", "vrf", "drand", "bls", "bn254"],
  "author": "Kevin Charm <kevin@frogworks.io>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.6",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.7",
    "@nomicfoundation/ignition-core": "^0.15.6",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.11.1",
    "hardhat": "2.21.x",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-storage-layout": "^0.1.7",
    "hardhat-storage-layout-changes": "^0.1.2",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.1.3",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@kevincharm/bls-bn254": "^2.0.0",
    "@kevincharm/noble-bn254-drand": "^0.0.1",
    "@noble/curves": "^1.6.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@scroll-tech/contracts": "^0.1.0",
    "solady": "^0.0.245"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
